generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"] // Enable multi-schema support
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas  = ["auth", "public"] // Include the relevant schemas
}

enum UserRole {
  user
  seller
  @@schema("public") // Link this enum to the "public" schema
}

model Profile {
  id           String   @id @default(uuid())
  userId       String   @unique @map("user_id")
  name         String?
  email        String   @unique
  profileImage Json?
  role         UserRole @default(user)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("Profile")
  @@schema("public") // Link this model to the "public" schema
}
